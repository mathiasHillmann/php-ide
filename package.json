{
	"name": "php-ide",
	"displayName": "PHP IDE",
	"description": "Turn your vscode into a proper PHP IDE.",
	"version": "0.2.1",
	"license": "SEE LICENSE IN LICENSE.md",
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.55.0"
	},
	"publisher": "mhillmann",
	"author": {
		"name": "Mathias Hillmann"
	},
	"categories": [
		"Formatters"
	],
	"galleryBanner": {
		"color": "#1e1e1e",
		"theme": "dark"
	},
	"keywords": [
		"PHP",
		"Code Sniffer",
		"IDE"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"main": "./out/main.js",
	"contributes": {
		"commands": [
			{
				"command": "php-ide.fix",
				"title": "PHP IDE: Run php-cs-fixer fix"
			},
			{
				"command": "php-ide.addPhpDoc",
				"title": "PHP IDE: Add PHPDoc Comment"
			}
		],
		"keybindings": [
            {
                "command": "php-ide.addPhpDoc",
                "key": "ctrl+shift+i"
            }
        ],
		"menus": {
            "editor/context": [{
                "when": "resourceLangId == php",
                "command": "php-ide.addPhpDoc",
                "group": "1_modification"
            }]
        },
		"configuration": {
			"title": "PHP IDE",
			"type": "object",
			"properties": {
				"php-ide.php-cs-fixer.toolPath": {
					"type": "string",
					"default": "",
					"description": "The path to the php-cs-fixer tool"
				},
				"php-ide.php-cs-fixer.config": {
					"type": "string",
					"default": "",
					"description": "Path to a .php_cs file (--config)"
				},
				"php-ide.php-cs.rules": {
					"type": "string",
					"default": "@PSR1,@PSR2",
					"description": "Rules to use when fixing files (--rules)"
				},
				"php-ide.php-cs-fixer.fixOnSave": {
					"type": "boolean",
					"default": true,
					"description": "Runs fix command on save"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run -S esbuild-base -- --minify",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
    	"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.11",
		"@types/tmp": "^0.2.0",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"esbuild": "^0.11.17",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"tmp": "^0.2.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mathiasHillmann/php-ide.git"
	},
	"homepage": "https://github.com/mathiasHillmann/php-ide"
}
